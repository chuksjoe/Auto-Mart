{
  "name": "automart",
  "version": "1.0.0",
  "description": "Auto Mart is an online marketplace for automobiles of diverse makes, model or body type.",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist && babel -d ./dist ./api -s",
    "serve": "set NODE_ENV=production& node dist/index.js",
    "start": "set NODE_ENV=development& babel-node api/v1/index.js",
    "dev": "set DEBUG=http & set NODE_ENV=development& nodemon api/v1/index.js --exec babel-node",
    "test": "set DEBUG=http & set NODE_ENV=test& mocha --timeout 0 --require babel-core/register --reporter spec --exit tests/ --exec babel-node",
    "coverage": "npm run build && ./node_modules/bin/istanbul cover ./node_modules/mocha/bin/_mocha --  -R spec dist/test/*.js && cat ./coverage/lcov.info | node ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chuksjoe/Auto-Mart.git"
  },
  "keywords": [
    "automart",
    "auto",
    "mart",
    "cars",
    "sales",
    "purchase",
    "online",
    "marketplace",
    "automobiles"
  ],
  "author": "Chukwunonso Orjiakor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chuksjoe/Auto-Mart/issues"
  },
  "homepage": "https://github.com/chuksjoe/Auto-Mart#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "codeclimate-test-reporter": "^0.5.1",
    "crypto": "^1.0.1",
    "eslint": "^5.16.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "node-config": "0.0.2",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "uuidv4": "^4.0.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "config": "^3.1.0",
    "coveralls": "^3.0.3",
    "debug": "^4.1.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "express": "^4.17.0",
    "istanbul": "^0.4.5",
    "morgan": "^1.9.1"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "parserOption": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "engines": {
    "node": ">=8"
  }
}
